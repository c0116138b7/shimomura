
	<%= render partial: "layouts/header" %>


<div class = info >
	<%= render partial: "users/info" %>
</div>
<table>
	<tr><th>title</th><th>Body</th></tr>
<% @books.each do |book| %>
<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	
</tr>
<% end %>
</table>

<h2>New book</h2>
<%= form_for @book do |f| %>
<h4>title</h4>
	<%= f.text_field :title %>
<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit %>
<% end %>